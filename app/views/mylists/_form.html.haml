= form_for @mylist do |f|
  - if @mylist.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mylist.errors.count, "error")} prohibited this mylist from being saved:"
      %ul
        - @mylist.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :default_order
    = f.text_field :default_order
  .field
    = f.label :comment
    = f.text_area :comment
  .actions
    = f.submit 'Save'
